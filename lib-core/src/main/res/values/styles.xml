<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BottomPopwindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popwindow_fade_in</item>
        <item name="android:windowExitAnimation">@anim/popwindow_fade_out</item>
    </style>

    <style name="TopPopwindowAnimation">
        <item name="android:windowEnterAnimation">@anim/top_popwindow_fade_in</item>
        <item name="android:windowExitAnimation">@anim/top_popwindow_fade_out</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="actionMenuTextColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentAppBar">
        <!--<item name="colorPrimary">@color/white</item>-->
        <!--<item name="colorPrimaryDark">@color/white</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowActionBarOverlay">true</item>-->
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TipDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="VideoPaper" />

    <style name="VideoPaper.AppBarOverlay" />

    <style name="VideoPaper.AppBarOverlay.Transparent" parent="AppTheme.AppBarOverlay">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundSplit">@color/transparent</item>
        <item name="android:backgroundStacked">@color/transparent</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="VideoPaper.Menu" />

    <style name="VideoPaper.Menu.Nav" />

    <style name="VideoPaper.Menu.Nav.Text">
        <item name="android:duplicateParentState">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/common_title_light</item>
    </style>

    <style name="VideoPaper.Settings" />

    <style name="VideoPaper.Settings.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#282828</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="VideoPaper.Settings.Text.Summary">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/common_title_light</item>
    </style>

    <style name="VideoPaper.Settings.Container">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:linksClickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="VideoPaper.List" />

    <style name="VideoPaper.List.Item" />

    <style name="VideoPaper.List.Item.Text">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textColor">@color/common_title_tone</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="VideoPaper.Split" />

    <style name="VideoPaper.Split.Line">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/list_item_pressed_color</item>
    </style>

    <style name="VideoPaper.Split.Line.Title">
        <item name="android:layout_height">2px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divide_line_color</item>
    </style>

    <style name="VideoPaper.Tab">
        <item name="android:textSize">16sp</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="VideoPaper.Tab1">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="VideoPaper.Tab2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="VideoPaper.Toobar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_collapseMode">pin</item>
        <item name="contentInsetStartWithNavigation">12dp</item>
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="titleTextColor">@color/common_title_dark</item>
        <item name="statusBarScrim">@android:color/transparent</item>
        <item name="contentScrim">@color/colorPrimary</item>
    </style>

    <style name="VideoPaper.Toobar.TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="VideoPaper.Toobar.TextAppearance.Shadow">
        <item name="android:shadowColor">@color/common_title_tone</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="VideoPaper.Toobar.Reverse">
        <item name="android:textStyle">bold</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="VideoPaper.Button" />

    <style name="VideoPaper.AppBarLayout">

    </style>

    <style name="VideoPaper.Content">
        <item name="android:background">@color/input_box_solid</item>
    </style>

    <style name="VideoPaper.Content.White">
        <item name="android:background">@color/white</item>
    </style>

    <style name="VideoPaper.Widget" />

    <style name="VideoPaper.Animation" />

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="StyleTransparentBg" parent="AppTheme.NoActionBar.TransparentAppBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="Dialog_Fullscreen" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <style name="Dialog_Fullscreen_slow" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation_slow</item>
    </style>

    <style name="Dialog_No_Anim" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>
    <!-- ActionSheet进出动画(慢) -->
    <style name="ActionSheetDialogAnimation_slow" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in_slow</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

</resources>