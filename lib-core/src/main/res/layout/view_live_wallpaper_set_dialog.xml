<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="27dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="当前使用的不是视频壁纸，是否立即恢复使用?"
            android:textColor="#404040"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="33dp"
            >

            <TextView
                android:id="@+id/dialog_cancle"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/video_wallpaper_no_use"
                android:textColor="#fa3a5d"
                android:textSize="16sp"
                android:background="@drawable/textview_corner_white"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="24dp"
                />

            <TextView
                android:id="@+id/dialog_submit"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/video_wallpaper_reuse"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/textview_corner_red"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="24dp"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>