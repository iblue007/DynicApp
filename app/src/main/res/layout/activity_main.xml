<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_hook_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ccc"
        android:gravity="center"
        android:text="hook小demo" />

    <TextView
        android:id="@+id/activity_dynic_tv"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:background="#ccc"
        android:gravity="center"
        android:text="dynic小demo" />

    <TextView
        android:id="@+id/activity_dynic_float"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:background="#ccc"
        android:gravity="center"
        android:text="悬浮窗播放视频" />

    <TextView
        android:id="@+id/activity_ajjl_click"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:background="#ccc"
        android:gravity="center"
        android:visibility="gone"
        android:text=" 模拟按键精灵点击" />

</LinearLayout>
